<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.daalzzwi.kidalkidal">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidalKidal"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.ActivityCheckVisitorCompany"></activity>
        <activity android:name=".activity.ActivityCheckVisitor" />
        <activity android:name=".activity.ActivityChatCompany" />
        <activity android:name=".activity.ActivityChat" />
        <activity android:name=".activity.ActivityOrder" />
        <activity
            android:name=".activity.ActivityQrScanner"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_qr_scanner"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.KidalKidal.NoActionBar"
            tools:replace="screenOrientation" />
        <activity android:name=".activity.ActivityQnaShow" />
        <activity android:name=".activity.ActivityQna" />
        <activity android:name=".activity.ActivityDesk" />
        <activity android:name=".activity.ActivityProfile" />
        <activity android:name=".activity.ActivityFindPassword" />
        <activity android:name=".activity.ActivityFindEmail" />
        <activity android:name=".activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ActivityMain" />
        <activity android:name=".activity.ActivityLogin" />
        <activity android:name=".activity.ActivityRegister" />
        <activity android:name=".activity.ActivityFind" />
    </application>

</manifest>